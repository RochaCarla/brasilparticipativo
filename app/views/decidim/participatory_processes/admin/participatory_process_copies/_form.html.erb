<div class="card" id="processes">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <div class="row">
        <div class="column xlarge-8">
          <%= form.translated :text_field, :title, autofocus: true %>
          <%= form.hidden_field :from_template, value: @form.from_template? %>
        </div>
        <div class="column xlarge-4 slug">
          <%= form.text_field :slug %>
          <p class="help-text"><%== t(".slug_help", url: decidim_form_slug_url(:processes, form.object.slug)) %></p>
        </div>
      </div>

      <div class="card" style="display: <%= current_user.admin? ? nil : "none" %>">
        <div class="card-divider copy-options-title">
          <legend><%= select %></legend>
        </div>
        <div class="card-section copy-options">
          <div class="row">
            <div class="columns xlarge-3">
              <%= form.check_box :copy_steps %>
            </div>

            <div class="columns xlarge-3">
              <%= form.check_box :copy_categories %>
            </div>

            <div class="columns xlarge-6">
              <%= form.check_box :copy_components %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>