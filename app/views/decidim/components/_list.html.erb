<% if defined?(current_component) %>
    <% if params.dig("filter", "with_availability").present? && params["filter"]["with_availability"] == "withdrawn" %>
        <div class="callout warning">
            <% if current_component.manifest_name == "proposals"%>
                <%= t("decidim.proposals.proposals.index.text_banner",
                    go_back_link: link_to(t("decidim.proposals.proposals.index.click_here"), 
                    proposals_path("filter[with_availability]" => nil)),
                    ).html_safe 
                %>
            <% end %>

            <% if current_component.manifest_name == "meetings" %>
                <%= t("decidim.meetings.meetings.index.text_banner",
                    go_back_link: link_to(t("decidim.meetings.meetings.index.click_here"), 
                    meetings_path("filter[with_availability]" => nil)),
                    ).html_safe 
                %>
            <% end %>
        </div>
    <% end %>

    <div class="<%= current_component.manifest_name %>-container">
        <p id="<%= current_component.manifest_name %>-count" class="<% current_component.manifest_name %>-counter">
            <%= render partial: "count" %>
        </p>
    </div>
<% else %>
    <section id="processes-grid" class="section row collapse">
        <div class="processes-grid-order-by">
            <%= render partial: "order_by_processes" %>
        </div>

        <%= render partial: "decidim/shared/participatory_space_filters/show" %>
    </section>
<% end %>