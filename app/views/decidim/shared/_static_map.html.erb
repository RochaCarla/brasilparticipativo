<% if geolocalizable.address.present? %>
  <div class="card--secondary">
    <div class="card__content address">
      <% if Decidim::Map.available?(:static) || Decidim::Map.available?(:dynamic) %>
      <div class="address__map">        
          <%= static_map_link(geolocalizable, { zoom: 10 }, { style: "width: 26rem; height: 10.875rem" }) %>
        </div>
      <% end %>
      <div class="address__info">
        <div class="address__details_container">
          <h5 class="section-heading add-comment-title"><%=t("layouts.decidim.map.static.arrive_instructions")%></h5>
          <%= render partial: "decidim/shared/address_details", locals: { geolocalizable: geolocalizable } %>
          <a class="button secondary hollow button-sc button--icon follow-button">
            <i class="fas fa-map-marked-alt"></i>
            Ver mapa
          </a>
        </div>
      </div>
    </div>
  </div>
<% end %>
