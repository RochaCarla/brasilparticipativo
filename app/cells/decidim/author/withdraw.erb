<% if withdrawable? %>
  <%= action_authorized_link_to :withdraw, withdraw_path, method: :put,
    class: "button secondary hollow",
    title: t("withdraw_btn_hint", scope: resource_i18n_scope ),
    data: { confirm: t("withdraw_confirmation_html", scope: resource_i18n_scope ) } do %>
    <i class="fa-solid fa-sm fa-x"></i>
    <% if translated_attribute(current_component.singular_name).present? %>
      <%= t("decidim.proposals.proposals.show.withdraw_proposal",
        singular_name: translated_attribute(current_component.singular_name).downcase) %>
    <% else %>
      <%= t("decidim.proposals.proposals.show.withdraw_proposal", singular_name: "proposta") %>
    <% end %>
  <% end %>
<% end %>