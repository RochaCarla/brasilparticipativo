<% if has_link_to_resource? %>
  <div class="proposal_card__footer">
    <div class="proposal-divider"></div>
    <div class="proposals_card_stats">
      <% if !current_settings.votes_hidden? %>
      <div class="proposal_stat">
        <span class="votes_stat" id="proposal-<%=model.id%>-votes-count-number"><%= progress_bar_progress %></span>
        <span class="votes_stat" id="proposal-<%=model.id%>-votes-count-text"><%= I18n.t("decidim.proposals.proposals.votes_count.count", count: progress_bar_progress) %></span>
      </div>
      <% end %>
      
      <div class="proposal_stat">
        <span class="comments_stat"><%= comments_count %></span>
        <span class="comments_stat"><%= I18n.t("decidim.proposals.proposals.comments_count.count", count: comments_count) %></span>
      </div>
    </div>
    <div class="proposal-divider"></div>

    <div class="proposal-buttons">    
      <%= link_to resource_path, class: "card__button button--sc light button small" do %>
        <%= t("decidim.proposals.proposals.view_btn.placeholder", 
        singular_name: translated_attribute(current_component.singular_name).present? ?
        translated_attribute(current_component.singular_name) :
        t("decidim.proposals.admin.when_empty").downcase
        ) %>
        <span class="show-for-sr"><%= title %></span>
      <% end %>
      </div>
    </div>
<% end %>

